<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.chris.year_4_project.AddEvent">

    <!-- AUTHOR: X00084900 CHRISTOPHER NEWELL -->
        <EditText
            android:id="@+id/AddItem_eventName_Input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:hint="Enter Event Name">
        </EditText>

        <EditText
            android:id="@+id/AddItem_eventVenue_Input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/AddItem_eventName_Input"
            android:layout_marginTop="35dp"
            android:hint="Enter Event Venue">
        </EditText>

        <EditText
            android:id="@+id/AddItem_eventDate_Input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/AddItem_eventVenue_Input"
            android:layout_marginTop="35dp"
            android:hint="Enter Event Date">
        </EditText>

        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:layout_alignParentBottom="true"
            style="@android:style/ButtonBar">

            <Button
                android:id="@+id/AddItem_ok_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/confirm_button">
            </Button>

            <Button
                android:id="@+id/AddItem_cancel_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/return_button">
            </Button>
        </LinearLayout>
</RelativeLayout>
