<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.chris.year_4_project.EditEvent">

    <!-- AUTHOR: X00084900 CHRISTOPHER NEWELL -->

    <TextView
        android:id="@+id/EditItem_eventName_Label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Edit Event Name">
    </TextView>
    <EditText
        android:id="@+id/EditItem_eventName_Input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/EditItem_eventName_Label">
    </EditText>

    <TextView
        android:id="@+id/EditItem_eventVenue_Label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@id/EditItem_eventName_Input"
        android:text="Edit Event Venue">
    </TextView>
    <EditText
        android:id="@+id/EditItem_eventVenue_Input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/EditItem_eventVenue_Label">
    </EditText>

    <TextView
        android:id="@+id/EditItem_eventDate_Label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@id/EditItem_eventVenue_Input"
        android:text="Edit Event Date">
    </TextView>
    <EditText
        android:id="@+id/EditItem_eventDate_Input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/EditItem_eventDate_Label">
    </EditText>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        style="@android:style/ButtonBar">

        <Button
            android:id="@+id/EditItem_ok_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/confirm_button">
        </Button>

        <Button
            android:id="@+id/EditItem_cancel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/return_button">
        </Button>
    </LinearLayout>
</RelativeLayout>
